@using System.Web.Optimization
<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=Edge,chrome=1">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>@ViewBag.Title</title>

        <link href="http://twilio.com/bundles/marketing/img/favicons/favicon.ico" rel="shortcut icon" />
        <link href="http://twilio.com/bundles/marketing/img/favicons/favicon_57.png" rel="apple-touch-icon" />
        <link href="http://twilio.com/bundles/marketing/img/favicons/favicon_72.png" sizes="72x72" rel="apple-touch-icon" />
        <link href="http://twilio.com/bundles/marketing/img/favicons/favicon_114.png" sizes="114x114" rel="apple-touch-icon" />

        @Styles.Render("~/Content/css")
    </head>
    <body>
        <div class="navbar navbar-default navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar" class="navbar-toggle collapsed">
                        <i class="fa fa-bars"></i>
                    </button>
                <a href="/" class="navbar-brand">SMS Notifications</a>
               </div>
            </div>
        </div>

        <div id="main" class="container">
            @{ Html.RenderPartial("_Alerts"); }
            @RenderBody()
        </div>

        <footer class="container">
            Made with <i class="fa fa-heart"></i> by your pals at 
            <a href="http://www.twilio.com">Twilio</a>.
        </footer>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
    </body>
</html>
